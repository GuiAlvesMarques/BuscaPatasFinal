    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Check user type and display Admin link if applicable
            function checkUserType() {
                fetch('/Account/IsLoggedIn', {
                    method: 'GET',
                    headers: {
                        'Accept': 'application/json',
                    },
                })
                    .then(response => {
                        if (!response.ok) {
                            throw new Error(`HTTP error! Status: ${response.status}`);
                        }
                        return response.json();
                    })
                    .then(data => {
                        console.log(data); // Debug: Log the response
                        if (data.isLoggedIn && data.userType === "Admin") {
                            // Show the Admin link if the user is an Admin
                            document.getElementById('adminLink').style.visibility = 'visible';
                        }
                    })
                    .catch(error => {
                        console.error('Error checking user type:', error);
                    });
            }

            // Call the function to check the user type
            checkUserType();
        });
    </script>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            startPollingForResults();
        });

        function startPollingForResults() {
            document.getElementById("loading-spinner").style.display = "block";

            // Immediate fetch before polling starts
            fetch('/Matchmaking/CheckMatches')
                .then(response => response.json())
                .then(data => {
                    console.log("Received matches:", data);  // Log response
                    if (data.success && data.data.length > 0) {
                        displayMatchedAnimals(data.data);
                        document.getElementById("loading-spinner").style.display = "none";
                    }
                })
                .catch(error => {
                    console.error('Error fetching matches:', error);
                });

            let attempts = 0;
            const maxAttempts = 10;
            const interval = setInterval(() => {
                fetch('/Matchmaking/CheckMatches')
                    .then(response => response.json())
                    .then(data => {
                        if (data.success && data.data.length > 0) {
                            clearInterval(interval);
                            displayMatchedAnimals(data.data);
                            document.getElementById("loading-spinner").style.display = "none";
                        } else {
                            attempts++;
                            if (attempts >= maxAttempts) {
                                clearInterval(interval);
                                document.getElementById("loading-spinner").innerHTML =
                                    "<p class='text-center text-danger'>Nenhum animal correspondente encontrado.</p>";
                            }
                        }
                    })
                    .catch(error => {
                        clearInterval(interval);
                        console.error('Error fetching matches:', error);
                        document.getElementById("loading-spinner").innerHTML =
                            "<p class='text-center text-danger'>Erro ao carregar os resultados.</p>";
                    });
            }, 3000); // Poll every 3 seconds
        }

        function displayMatchedAnimals(animals) {
            const resultsContainer = document.getElementById('matchResults');
            resultsContainer.innerHTML = ''; // Clear previous results

            animals.forEach(match => {
                console.log("Animal Data:", match);  // Debugging to verify data

                const colDiv = document.createElement('div');
                colDiv.className = 'col-md-4 mb-4';

                const cardDiv = document.createElement('div');
                cardDiv.className = 'card shadow-sm text-center';

                const img = document.createElement('img');
                img.className = 'card-img-top';
                img.src = match.imageBase64 ? `data:image/jpeg;base64,${match.imageBase64}` : '/img/default-animal.jpg';
                img.alt = match.animalName || 'Unknown Animal';
                img.style.maxHeight = '250px';
                img.style.objectFit = 'cover';

                const cardBody = document.createElement('div');
                cardBody.className = 'card-body';

                const title = document.createElement('h5');
                title.className = 'card-title';

                // Ensure correct casing of IDAnimal
                const animalId = match.IDAnimal || match.idAnimal || match.idanimal; // Handle potential casing issues

                if (animalId) {
                    // Make the animal name a clickable link
                    const link = document.createElement('a');
                    link.href = `/Sheltered/Details/${animalId}`;
                    link.textContent = match.animalName || 'Unknown';
                    title.appendChild(link);
                } else {
                    title.textContent = match.animalName || 'Unknown';
                }

                cardBody.appendChild(title);
                cardDiv.appendChild(img);
                cardDiv.appendChild(cardBody);
                colDiv.appendChild(cardDiv);
                resultsContainer.appendChild(colDiv);
            });
        }
    </script>

