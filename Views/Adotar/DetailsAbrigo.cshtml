                        <h5>Capacidade Máxima:</h5>
                        <p>@Model.MaximumCapacity animais</p>
                        <h5>Contacto:</h5>
                        <p>Telefone: @Model.PhoneNumber</p>
                        <p>Email: <a href="mailto:@Model.Email">@Model.Email</a></p>
                    </div>
                    <a href="@Model.Website">
