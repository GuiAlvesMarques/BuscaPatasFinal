                                <li><a href="@Model.Facebook" target="_blank"><i class="fa fa-facebook"></i> Facebook</a></li>
                            }
                            @if (!string.IsNullOrEmpty(Model.Instagram))
                            {
                                <li><a href="@Model.Instagram" target="_blank"><i class="fa fa-instagram"></i> Instagram</a></li>
                            }
                            @if (!string.IsNullOrEmpty(Model.TikTok))
