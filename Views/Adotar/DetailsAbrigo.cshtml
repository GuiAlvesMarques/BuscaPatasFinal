    <!-- Js Plugins -->
    <script>
        $(document).on('click', '.like-button', function (e) {
            e.preventDefault();

            // Captura os IDs do animal e da espécie
            const animalId = $(this).data('animal-id');
            const speciesId = $(this).data('species-id');

            // Verifique se o ID do animal está presente
            if (!animalId) {
                alert('ID do animal não encontrado.');
                return;
            }

            // Envia o pedido AJAX para adicionar o "like"
            $.ajax({
                url: '/Likes/AddLike',
                method: 'POST',
                contentType: 'application/json',
                data: JSON.stringify({ IDAnimal: animalId, IDSpecies: speciesId }),
                success: function (response) {
                    if (response.success) {
                        alert('Animal adicionado aos favoritos com sucesso.');
                    } else {
                        alert(response.message || 'Não foi possível adicionar aos favoritos.');
                    }
                },
                error: function (xhr) {
                    const error = xhr.responseJSON?.message || 'Ocorreu um erro.';
                    alert(error);
                }
            });
        });
    </script>


