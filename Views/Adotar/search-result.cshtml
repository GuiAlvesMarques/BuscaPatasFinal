    <div class="container">
        <div class="search-bar">
            <div class="section-title">
                <h4>Resultados da Pesquisa</h4>
            </div>
            <div class="search-bar d-flex align-items-center">
                <input type="text"
                       id="search-input-bar"
                       placeholder="Procura por nome de animais ou abrigos..."
                       class="form-control me-2" />
                <button type="button"
                        id="search-button"
                        class="btn btn-primary">
                    Procura
                </button>
            </div>
        </div>
    </div>



    <!-- Shelter Section Begin -->
    <section class="adoption spad">
        <div class="container">
            <div class="section-title">
                <h4>Resultados da Pesquisa</h4>
            </div>
            <div class="row">
                @model List<dynamic>

                @if (Model != null && Model.Any())
                {
                    @foreach (var result in Model)
                    {
                        <div class="col-lg-4 col-md-6 col-sm-12 mb-4">
                            <div class="card result-item shadow-sm h-100">
                                <img src="@result.ImageUrl" alt="@result.Name" class="card-img-top img-fluid" />
                                <div class="card-body">
                                    <h5 class="card-title">@result.Name</h5>
                                    <p class="card-text">@result.Description</p>
                                    <a href="@result.DetailsUrl" class="btn btn-primary">Ver Detalhes</a>
                                </div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="col-12">
                        <p class="text-center">Nenhum resultado encontrado.</p>
                    </div>
                }
            </div>
        </div>
    </section>


    <style>
        .result-item {
            border: 1px solid #e0e0e0;
            border-radius: 8px;
            transition: transform 0.2s ease-in-out;
        }

            .result-item:hover {
                transform: scale(1.02);
            }

        .card-img-top {
            object-fit: cover;
            height: 200px; /* Define uma altura consistente para as imagens */
        }

        .card-title {
            font-size: 1.2rem;
            font-weight: bold;
            color: #333;
        }

        .card-text {
            font-size: 1rem;
            color: #555;

        }
    </style>
