    <script>
            $(document).on('click', '.remove-favorite', function () {
                    const speciesId = $(this).data('species-id');
            const animalId = $(this).data('animal-id');

            $.ajax({
                url: '/Likes/RemoveLike',
            method: 'POST',
            data: {speciesId: speciesId, animalId: animalId },
            success: function (response) {
                            if (response.success) {
                alert(response.message);
            // Opcional: Remova o cartão correspondente da interface
            location.reload(); // Atualize a página
                            } else {
                alert(response.message);
                            }
                        },
            error: function (xhr) {
                alert('Erro ao remover dos favoritos. Tente novamente.');
