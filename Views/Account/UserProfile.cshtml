                                <div class="card animal-card">
                                    <a href="/Sheltered/Details/@favorite.IDAnimal">
                                        <img src="@(favorite.Image != null ? $"data:image/jpeg;base64,{favorite.Image}" : "~/img/default-image.png")"
                                             class="card-img-top" alt="@favorite.AnimalName">
                                        <div class="card-body">
                                            <h6 class="animal-card-title">@favorite.AnimalName</h6>
                                            <p class="animal-card-text">
                                                Idade: @favorite.AgeRange<br>
                                                Raça: @favorite.Breed<br>
                                                Local: @favorite.Location
                                            </p>
                                            <form action="/Likes/RemoveLike" method="post">
                                                <input type="hidden" name="animalId" value="@favorite.IDAnimal" />
                                                <button type="submit" class="btn btn-danger btn-sm">Remover dos Favoritos</button>
                                            </form>
                                        </div>
                                    </a>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <p class="text-center">Nenhum animal marcado como favorito.</p>
                    }
                </div>
            </div>
        </div>


<script>
    document.addEventListener("DOMContentLoaded", function () {
        // Função para carregar os favoritos
        function loadFavorites() {
            fetch('/Likes/GetUserFavorites')
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        const container = document.getElementById('liked-animals');
                        container.innerHTML = ""; // Limpa os favoritos carregados anteriormente

                        if (data.favorites.length === 0) {
                            container.innerHTML = "<p class='text-center'>Nenhum animal marcado como favorito.</p>";
                            return;
                        }

                        // Renderiza os favoritos dinamicamente
                        data.favorites.forEach(favorite => {
                            const card = `
                                <div class="col-md-4">
                                    <div class="card animal-card">
                                        <a href="/Sheltered/Details/${favorite.IDAnimal}">
                                            <img src="${favorite.Image || '~/img/no-image.png'}" 
                                                 class="card-img-top" 
                                                 alt="${favorite.AnimalName}">
                                            <div class="card-body">
                                                <h6 class="animal-card-title">${favorite.AnimalName}</h6>
                                                <p class="animal-card-text">
                                                    Idade: ${favorite.AgeRange || "Desconhecida"}<br>
                                                    Raça: ${favorite.Breed || "Desconhecida"}<br>
                                                    Local: ${favorite.Location || "Não informado"}
                                                </p>
                                                <button class="btn btn-danger btn-sm" 
                                                        onclick="removeFavorite(${favorite.IDAnimal})">
                                                    Remover dos Favoritos
                                                </button>
                                            </div>
                                        </a>
                                    </div>
                                </div>`;
                            container.insertAdjacentHTML('beforeend', card);
                        });
                    } else {
                        console.error("Erro ao carregar favoritos:", data.message);
                    }
                })
                .catch(error => {
                    console.error("Erro ao buscar favoritos:", error);
                });
        }

        // Função para remover favoritos
        function removeFavorite(animalId) {
            fetch(`/Likes/RemoveLike?animalId=${animalId}`, { method: 'POST' })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        alert(data.message);
                        loadFavorites(); // Recarrega a lista de favoritos
                    } else {
                        alert("Erro: " + data.message);
                    }
                })
                .catch(error => console.error("Erro ao remover favorito:", error));
        }

        // Inicializa o carregamento dos favoritos ao carregar a página
        loadFavorites();
    });
</script>
   

